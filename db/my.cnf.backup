[mysqld]
# Basic paths
basedir=/home/wuy/DB/ShannonBase/cmake_build
datadir=/home/wuy/DB/ShannonBase/db/data
tmpdir=/tmp
port=3307
socket=/tmp/mysql.sock

# MySQL X Plugin configuration
# Fixed from placeholder path '/home/path-to-shannon-bin/tmp/mysqlx.sock'
mysqlx_socket=/tmp/mysqlx.sock
mysqlx_port=33060
# Uncomment to disable MySQL X if not needed:
# mysqlx=0

# Performance settings for data loading
innodb_buffer_pool_size=2G
innodb_log_file_size=512M
innodb_flush_log_at_trx_commit=2
innodb_flush_method=O_DIRECT
innodb_doublewrite=0

# Bulk insert optimization
bulk_insert_buffer_size=256M
max_allowed_packet=1G

# For parallel imports
max_connections=200
innodb_thread_concurrency=0
innodb_read_io_threads=8
innodb_write_io_threads=8

# Foreign key checks (can be disabled for faster imports)
foreign_key_checks=1

# Enable local infile for LOAD DATA
local_infile=1
secure_file_priv=

# Error log
log_error=/home/wuy/DB/ShannonBase/db/data/shannonbase.err

# Character set
character-set-server=utf8mb4
collation-server=utf8mb4_unicode_ci

[mysql]
# Client settings
port=3307
socket=/tmp/mysql.sock
local_infile=1
default-character-set=utf8mb4